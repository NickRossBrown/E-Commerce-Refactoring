<h3>Products</h3>

<div class="row">
  <div class="section">
  <div style="height: 50px; width: 800px; background-color: <%=['blue', 'red,' 'green', 'yellow', 'green', 'purple'].sample%>;"></div>
  <% @products.each do |product| %>
    <div class="col s4" id="product-<%= product.id %>">

  
      <%= render product %>

      <%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
      <% end %>
    </div>
  <% end %>
</div>
</div>
 
